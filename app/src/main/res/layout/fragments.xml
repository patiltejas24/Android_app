<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment android:name="com.example.kali.test2.TopSectionFragment"
        android:id="@+id/fragment1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/top_secction_fragment" />
    <fragment android:name="com.example.kali.test2.BottomSectionFragment"
        android:id="@+id/fragment2"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_width="350dp"
        android:layout_height="550dp"
        tools:layout="@layout/bottom_section_fragment" />
</LinearLayout>